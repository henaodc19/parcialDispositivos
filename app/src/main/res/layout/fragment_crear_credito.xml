<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CrearCreditoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/idFondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="8dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="49dp"
                android:src="@drawable/ic_arrow_back_black_24dp">

            </ImageButton>
        </RelativeLayout>

        <TextView
            android:id="@+id/menuInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Datos del propietario"
            android:textSize="25sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/subMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Todos los campos son obligatorios"

            android:textSize="17dp" />

        <EditText
            android:id="@+id/Identificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Identificacion"
            android:layout_margin="10dp">

        </EditText>

        <EditText
            android:id="@+id/nombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre(s)"
            android:layout_margin="10dp">

        </EditText>

        <EditText
            android:id="@+id/Apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Identificacion"
            android:layout_margin="10dp">

        </EditText>

        <EditText
            android:id="@+id/Correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Identificacion"
            android:layout_margin="10dp">

        </EditText>
    </LinearLayout>

</RelativeLayout>